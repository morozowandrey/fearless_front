.wrapper {
  //height: 100%;
  margin: 0 auto;
  max-width: 1170px;
}
.clearfix:after {
  content: '.';
  visibility: hidden;
  display: block;
  height: 0;
  clear: both;
  font-size: 0;
}
.hidden {
  display: none !important;
}
.flex {
  display flex
  justify-content center
  align-items center
}


.line {
  height 3px
  background-color black

  &_short {
    width 100px
  }
  &_long {
    width 165px
    margin-bottom 30px
  }
  &-vertical {
    height 135px
    width 2px
    margin-right 30px

    display inline-block
    vertical-align middle
    background-color black
  }
}

.heading {
  margin-bottom 10px
  font-family main-ff-bold
  font-size 18px
}
.text {
  margin-bottom 0
  font-family main-ff-light
  font-size 14px
  line-height 1.4
}