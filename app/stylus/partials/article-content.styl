.content {
  background-color white
  padding-bottom 100px

  &__text {
    margin-bottom 40px
    font-size 18px
    padding 0 15px
    text-align justify
  }
  &__main-text {
    margin 40px 0 80px
    font-size 18px
    line-height 1.4
  }
  .chief__text {
    padding 0 15px
    margin 0
    font-size 18px;
  }
  .line-vertical {
    position: absolute;
    left: 0px;
    height: 100%;
  }
  &__img {
    width 100%
    margin-bottom 50px
  }
  &-share {
    text-align right

    &__fb,
    &__inst {
      width 30px
      height 30px
      margin-left 15px
      display inline-block
      vertical-align bottom

      background-image url("../images/fb.svg")
      background-repeat no-repeat
      background-position center
      cursor pointer
    }
    &__inst {
      background-image url("../images/inst.svg")
    }
    &__fb:hover {
      background-image url("../images/fb_hover.svg")
    }
    &__inst:hover {
      background-image url("../images/inst_hover.svg")
    }

    .heading,
    .content-popup-button {
      position relative
      margin-bottom 0
      display inline-block

      font-family main-ff
      font-size 18px
      text-transform uppercase

      line-height 1.4
      cursor pointer
    }
    .content-popup-button:hover {
      text-decoration underline
    }
    .content-popup-button:before {
      content ''
      position absolute
      top -2px
      left -30px
      width 18px
      height 27px
      background-image url("../images/lightning_yellow.png")
      background-repeat no-repeat
      background-position center
      background-size cover
    }
  }
  .float_right {
    float right
  }
  .float_left {
    float left
  }
}
@media (max-width: 768px) {
  .content .line-vertical {
    left: 30px;
  }
  .content__main-text {
    padding-left 40px !important
  }
}
@media (max-width: 576px) {
  .content .float_right,
  .content .float_left {
    float none
    margin-bottom 30px
  }
  .content-share {
    text-align: center;
  }
}