.feedback {
  background-color white
  padding 0 15px
  padding-bottom 90px

  &-box {
    min-height 265px
    //height sets for fix IE11 calculatin height of el bug
    height 265px
    border 4px solid black

    flex-direction column
  }
}
.feedback .heading {
  margin-bottom 60px
  font-size 27px
}
.feedback .donate-button {
  padding: 17px 56px;
  font-size: 18px;
  max-height: 60px;
}

@media (max-width: 992px) {
  .feedback .form-control {
    margin-bottom 30px !important
  }
  .feedback .heading {
    margin-bottom 40px
  }
  .feedback-box {
    height 365px
  }
}
@media (max-width: 767px) {
  .feedback .feedback-box .form-control {
    width 100%
    max-width 300px
  }
  .feedback .donate-button {
    margin-bottom 30px
  }
  .feedback .heading {
    margin-top 30px
  }
}

.article {
  .feedback-box {
    border: none
    margin-bottom 40px
  }
}