.previews {
  background-color white
}
.preview {
  margin-bottom 45px

  &-img {
    position relative
    margin-bottom 30px

    &__img {
      width 100%
    }
    &__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity 0
      transition: opacity 0.35s;
    }
    &__link {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }

  &-socials {
    width: 100%;

    display: flex;
    justify-content: center;
    position: absolute;
    z-index 2
    bottom: 35px;

    opacity 0
    cursor pointer

    transform: translate3d(0,100%,0);
    transition: 0.35s;

    &-like__img,
    &-view__img,
    &-comment__img {
      display inline-block

      height 20px
      width 20px
      margin 5px
      background-image url("../images/like.svg")
      background-repeat no-repeat
      background-position center
      cursor pointer
    }


    &-like,
    &-view,
    &-comment {
      display flex
      align-items center
      margin-right 5px
    }


    &-like {

      &__img {
        &_done {
          height 20px
          width 20px
          margin 5px
          display inline-block
          background-image url("../images/like_hover.svg")
          background-repeat no-repeat
          background-position center
          cursor pointer
        }
      }
      &__like-count {

      }
    }
    &-view {

      &__img {
        background-image url("../images/view.svg")
      }
      &__view-count {

      }
    }
    &-comment {

      &__img {
        background-image url("../images/comment.svg")
      }
      &__comment-count {

      }
    }


    &-like__like-count,
    &-view__view-count,
    &-comment__comment-count {
      display inline-block
      font-size 16px
      font-family main-ff-light
      color white
    }
  }
}

.preview-img:hover .preview-socials {
  transform: translate3d(0,40%,0);
  opacity 1
}
.preview-img:hover .preview-img__overlay {
  background-color: rgba(0,0,0,0.3);
  opacity 1
}

.previews.previews_first {
  padding-bottom 45px
}
.previews.previews_second {
  padding-bottom 50px
}
.previews.previews_third {
  padding-top 90px
}
.previews-block .line.line_short {
  margin-bottom 20px
}

@media (max-width: 575px) {
  .preview-socials-like__img,
  .preview-socials-view__img,
  .preview-socials-comment__img {
    width 40px
    height 40px
  }
  .preview-socials-like,
  .preview-socials-view,
  .preview-socials-comment {
    margin-right 10px
  }
}
@media (max-width: 450px) {
  .preview-socials-like__img,
  .preview-socials-view__img,
  .preview-socials-comment__img {
    width 20px
    height 20px
  }
}