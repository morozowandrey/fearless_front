.footer .input-group {
  margin 0 !important
}
.footer .form-control {
  border 1px solid white
  border-radius 0
  background-color transparent
}
.footer .form-control:focus {
  color: dark-gray
  background-color: white
  border-color: transparent
  border none
  outline: 0
  box-shadow: none
}
.footer .input-group-addon {
  outline none
  border none
  border-radius 0
  background-color white

  &__img {
    width 30px
    height 22px
  }
}

.story .form-control,
.feedback .form-control {
  border: 1px solid black;
  border-radius: unset;
  width: 90%
  height: 55px;
  margin 0 auto
}
.story .form-control:focus,
.feedback .form-control:focus {
  color: dark-gray
  border: 1px solid black
  outline: 0
  box-shadow: none
}
.feedback .form-row {
  justify-content center
  text-align center
}
.feedback-box form {
  width 100%
}


.story .form-control {
  border: 1px solid black;
  border-radius: unset;
  width: 100%
  height: 45px;
  margin 0 auto
  margin-bottom 45px
}
